# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.md]
indent_size = 2
max_line_length = 0
trim_trailing_whitespace = false

[*.scss]
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 0

